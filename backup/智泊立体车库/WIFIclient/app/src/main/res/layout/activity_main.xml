<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wificlient.MainActivity">

    <TextView
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="端口号："
        android:layout_below="@+id/EditText_IP"
        android:layout_alignBottom="@+id/EditText_port"
        android:layout_toLeftOf="@+id/EditText_IP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Button_joint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/EditText_port"
        android:layout_alignParentRight="true"
        android:text="连接"/>

    <LinearLayout
        android:id = "@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout1">
        <TextView
            android:id="@+id/receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="接收"/>

        <TextView
            android:id="@+id/TextView_receive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>

    <TextView
        android:text="phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:layout_toStartOf="@+id/EditText_port"
        android:layout_toLeftOf="@+id/EditText_port"
        android:textSize="24sp"
        android:layout_below="@+id/Button_joint"
        android:layout_alignBottom="@+id/editText_P" />

    <TextView
        android:id="@+id/server_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="服务器IP："
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="car_num:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:layout_toLeftOf="@+id/editText_P"
        android:layout_toStartOf="@+id/editText_P"
        android:layout_alignBottom="@+id/editText_num" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="888888"
        android:ems="10"
        android:layout_below="@+id/editText_P"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText_num"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <LinearLayout
        android:id = "@+id/LinearLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/EditText_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:maxLines="1" />

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="登录"/>
    </LinearLayout>

    <Button
        android:text="存车"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:id="@+id/car"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content" />

    <Button
        android:text="取车"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/car"
        android:id="@+id/car1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="18877336728"
        android:ems="10"
        android:id="@+id/editText_P"
        android:layout_below="@+id/Button_joint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:text="车位查询"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sele"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/EditText_IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="192.168.1.101"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/server_IP"
        android:layout_toEndOf="@+id/server_IP"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/EditText_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="26900"
        android:textSize="24sp"
        android:layout_below="@+id/EditText_IP"
        android:layout_toRightOf="@+id/port"
        android:layout_toEndOf="@+id/port" />

</RelativeLayout>
